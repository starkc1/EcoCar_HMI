<Page
    x:Class="EcoCarHMI.SelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EcoCarHMI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid Background="White" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <controls:DropShadowPanel Grid.Row="0" BlurRadius="40.0" ShadowOpacity="0.30" OffsetX="0.0" OffsetY="0.0" Color="Gray" Height="275" Width="275" CornerRadius="40"
                                  HorizontalAlignment="Center">
            <Button x:Name="NoAssistanceBtn" Margin="0,0,0,0" VerticalAlignment="Top" 
                    Height="275" Width="275" Click="NoAssistance_Click" CornerRadius="10" Background="White" BorderThickness="1,1,1,1" BorderBrush="#f0c85a"
                    FocusVisualPrimaryBrush="White">
                <Grid HorizontalAlignment="Center" Height="275" Width="275">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--<SymbolIcon Symbol="Microphone" Grid.Row="0" Foreground="#0a569c"/>-->
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0a569c" FontSize="25">
                        No Assistance
                    </TextBlock>
                </Grid>
            </Button>
        </controls:DropShadowPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Padding="0,35,0,0">
                <TextBlock Foreground="#212121" HorizontalAlignment="Center" FontSize="25" VerticalAlignment="Center">
                    Assited Use Options
                </TextBlock>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <controls:DropShadowPanel Grid.Column="0" BlurRadius="40.0" ShadowOpacity="0.30" OffsetX="0.0" OffsetY="0.0" Color="Gray" Height="275" Width="275" CornerRadius="40"
                                  HorizontalAlignment="Center">
                    <Button x:Name="DeafAssistanceBtn" Margin="0,0,0,0" VerticalAlignment="Top" 
                    Height="275" Width="275" Click="DeafAssistance_Click" CornerRadius="10" Background="White" BorderThickness="1,1,1,1" BorderBrush="#f0c85a"
                    FocusVisualPrimaryBrush="White">
                        <Grid HorizontalAlignment="Center" Height="275" Width="275">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--<SymbolIcon Symbol="Microphone" Grid.Row="0" Foreground="#0a569c"/>-->
                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0a569c" FontSize="25">
                                Speech To Text
                            </TextBlock>
                        </Grid>
                    </Button>
                </controls:DropShadowPanel>

                <controls:DropShadowPanel Grid.Column="1" BlurRadius="40.0" ShadowOpacity="0.30" OffsetX="0.0" OffsetY="0.0" Color="Gray" Height="275" Width="275" CornerRadius="40"
                                  HorizontalAlignment="Center">
                    <Button x:Name="MobilityAssistanceBtn" Margin="0,0,0,0" VerticalAlignment="Top" 
                    Height="275" Width="275" Click="MobilityAssistance_Click" CornerRadius="10" Background="White" BorderThickness="1,1,1,1" BorderBrush="#f0c85a"
                    FocusVisualPrimaryBrush="White">
                        <Grid HorizontalAlignment="Center" Height="275" Width="275">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--<SymbolIcon Symbol="Microphone" Grid.Row="0" Foreground="#0a569c"/>-->
                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0a569c" FontSize="25">
                                Eye Tracking
                            </TextBlock>
                        </Grid>
                    </Button>
                </controls:DropShadowPanel>

                <controls:DropShadowPanel Grid.Column="2" BlurRadius="40.0" ShadowOpacity="0.30" OffsetX="0.0" OffsetY="0.0" Color="Gray" Height="275" Width="275" CornerRadius="40"
                                  HorizontalAlignment="Center">
                    <Button x:Name="SightAssistanceBtn" Margin="0,0,0,0" VerticalAlignment="Top" 
                    Height="275" Width="275" Click="SightAssistance_Click" CornerRadius="10" Background="White" BorderThickness="1,1,1,1" BorderBrush="#f0c85a"
                    FocusVisualPrimaryBrush="White">
                        <Grid HorizontalAlignment="Center" Height="275" Width="275">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--<SymbolIcon Symbol="Microphone" Grid.Row="0" Foreground="#0a569c"/>-->
                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0a569c" FontSize="25">
                                Text To Speech
                            </TextBlock>
                        </Grid>
                    </Button>
                </controls:DropShadowPanel>


            </Grid>
        </Grid>
    </Grid>
</Page>
